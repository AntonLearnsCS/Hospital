<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_padding">

    <TextView
        android:id="@+id/tv_appointment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_common_style"
        app:layout_constraintEnd_toStartOf="@+id/tv_patient_name_appointment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_patient_name_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_common_style"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor_name_appointment_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_appointment_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_doctor_name_appointment_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_common_style"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_time_list"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_patient_name_appointment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_time_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_view_common_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_name_appointment_list"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>